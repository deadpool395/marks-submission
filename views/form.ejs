<!DOCTYPE html>
<html>
<head>
  <title>Enter Marks - <%= className %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f8f9fa; }
    .card { border-radius: 12px; }
    @media (max-width: 576px) {
      h2 { font-size: 20px; }
      .btn-lg { font-size: 16px; padding: 10px 18px; }
    }
  </style>
</head>
<body class="bg-light">
  <div class="container mt-5">
    <div class="card shadow-lg p-4">
      <h2 class="text-center mb-4 text-primary">Enter Marks for Class <%= className %></h2>
      <form action="/submit" method="POST" onsubmit="return validateForm()">
        <input type="hidden" name="className" value="<%= className %>">

        <!-- Teacher Name -->
        <div class="mb-3">
          <label class="form-label">Teacher Name:</label>
          <input type="text" name="teacherName" class="form-control" required>
        </div>

        <!-- Subject Name -->
        <div class="mb-3">
          <label class="form-label">Subject Name:</label>
          <select name="subjectName" class="form-select" required onchange="toggleFields(this.value)">
            <option value="">--Select Subject--</option>
            <option>Mathematics</option>
            <option>General-Science</option>
            <option>English</option>
            <option>History-and-civics</option>
            <option>Geography</option>
            <option>Biology</option>
            <option>Chemistry</option>
            <option>Physics</option>
            <option>Computer</option>
            <option>Social-Studies</option>
            <option>Moral-Science</option>
            <option>English-I</option>
            <option>English-II</option>
            <option>Hindi</option>
            <option>Malayalam</option>
            <option>General-Knowledge</option>
            <option value="Drawing">Drawing</option>
            <option>Dict-Eng</option>
            <option>Dict-Mal</option>
            <option>Dict-Hindi</option>
          </select>
        </div>

        <!-- Exam Type -->
        <div class="mb-3">
          <label class="form-label">Exam Type:</label>
          <select name="examType" class="form-select" required>
            <option value="">--Select Exam Type--</option>
            <option value="Term One">Term One</option>
            <option value="Term Two">Term Two</option>
            <option value="Term Three">Term Three</option>
          </select>
        </div>

        <!-- Max and Min Marks -->
        <div id="marksFields" class="row mb-3">
          <div class="col">
            <label class="form-label">Maximum Marks:</label>
            <input type="number" name="maxMarks" class="form-control" min="1" required>
          </div>
          <div class="col">
            <label class="form-label">Minimum Pass Marks:</label>
            <input type="number" name="minPassMark" class="form-control" min="0" required>
          </div>
        </div>

        <h4 class="text-secondary">Marks for Students</h4>
        <div class="row" id="studentsContainer">
          <% students.forEach(student => { %>
            <div class="col-md-6 mb-2 student-field">
              <label class="form-label"><%= student.hallticket %>:</label>
              <!-- Allow decimal marks -->
              <input 
                type="number" 
                class="form-control student-input" 
                name="marks_<%= student.hallticket %>" 
                min="0" 
                step="0.01"   
                placeholder="Enter marks (e.g., 45.5)"
              >
            </div>
          <% }) %>
        </div>
        

        <div class="text-center mt-4">
          <button type="submit" class="btn btn-success btn-lg">Submit</button>
        </div>
      </form>
    </div>
  </div>
  

  <script>
    function toggleFields(subject) {
      const maxField = document.querySelector('[name="maxMarks"]');
      const minField = document.querySelector('[name="minPassMark"]');
      const studentFields = document.querySelectorAll('.student-field');
  
      if (subject === "Drawing") {
        // disable max/min marks
        maxField.disabled = true;
        minField.disabled = true;
        maxField.value = "";
        minField.value = "";
        
        // switch student inputs to grade
        studentFields.forEach(div => {
          const label = div.querySelector("label").textContent;
          const hallticket = label.replace(":","").trim();
          div.innerHTML = `
            <label class="form-label">${hallticket}:</label>
            <select class="form-select student-input" name="grade_${hallticket}">
              <option value="">--Select Grade--</option>
              <option>A+</option>
              <option>A</option>
              <option>B+</option>
              <option>B</option>
              <option>C</option>
              <option>D</option>
              <option>E</option>
            </select>
          `;
        });
  
      } else {
        // enable max/min marks
        maxField.disabled = false;
        minField.disabled = false;
  
        // switch back to marks input
        studentFields.forEach(div => {
          const hallticket = div.querySelector("label")?.textContent.replace(":","").trim() || div.getAttribute("data-hallticket");
          div.innerHTML = `
            <label class="form-label">${hallticket}:</label>
            <input type="number" class="form-control student-input" name="marks_${hallticket}" min="0" step="0.01" placeholder="Enter marks (e.g., 45.5)">
          `;
        });
      }
    }
  
    function validateForm() {
      const subject = document.querySelector('[name="subjectName"]').value;
  
      if (subject !== "Drawing") {
        // Ensure all marks entered are within max mark limit
        const maxMarks = parseFloat(document.querySelector('[name="maxMarks"]').value || "0");
        const inputs = document.querySelectorAll('input[name^="marks_"]');
        for (let input of inputs) {
          if (input.value && parseFloat(input.value) > maxMarks) {
            alert("Entered marks cannot exceed maximum marks!");
            return false;
          }
        }
      }
  
      // ðŸ”¹ Disable empty fields before submit
      const allFields = document.querySelectorAll('.student-input');
      allFields.forEach(field => {
        if (!field.value || field.value.trim() === "") {
          field.disabled = true;
        }
      });
  
      return true;
    }
    

  </script>
</body>
</html>
